{
  "name": "edusys",
  "version": "1.0.0",
  "description": "administrative service for educators",
  "main": "app/server.js",
  "engines": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "build": "NODE_ENV=production babel app --out-dir dist",
    "migrate": "NODE_ENV=production node_modules/.bin/knex migrate:latest",
    "migrate:dev": "NODE_ENV=development node_modules/.bin/knex migrate:latest",
    "migrate:make": "NODE_ENV=development node_modules/.bin/knex migrate:make",
    "migrate:staging": "NODE_ENV=staging node_modules/.bin/knex migrate:latest",
    "rollback:dev": "NODE_ENV=development node_modules/.bin/knex migrate:rollback",
    "rollback:staging": "NODE_ENV=staging node_modules/.bin/knex migrate:rollback",
    "seed": "NODE_ENV=production node_modules/.bin/knex seed:run",
    "seed:dev": "NODE_ENV=development node_modules/.bin/knex seed:run",
    "seed:make": "NODE_ENV=development node_modules/.bin/knex seed:make",
    "seed:staging": "NODE_ENV=staging node_modules/.bin/knex seed:run",
    "start": "NODE_ENV=production node dist/server.js",
    "start:dev": "NODE_ENV=development nodemon --exec babel-node app/server.js",
    "test:dev": "find ./app -name '*.spec.js' | NODE_ENV=development xargs ./node_modules/.bin/mocha --require @babel/register --require babel-polyfill -R spec --exit",
    "test:staging": "find ./app -name '*.spec.js' | NODE_ENV=staging xargs ./node_modules/.bin/mocha --require @babel/register --require babel-polyfill -R spec --exit"
  },
  "author": "Huang Lie Jun",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "knex": "^0.16.5",
    "mysql": "^2.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-datetime": "^1.5.0",
    "chai-http": "^4.3.0",
    "chai-subset": "^1.6.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.12.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "sinon": "^7.3.2"
  }
}
